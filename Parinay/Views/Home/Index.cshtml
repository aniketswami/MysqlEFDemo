@model List<Parinay.Models.student>
@{
    ViewBag.Title = "Home Page";
}

@if (ViewBag.queryResult != null)
{
    <script>
        alert("Student Added Successfully.")
    </script>
}

<form action="/Home/Index" method="POST">
    <table>
        <tr>
            <td>Name : </td>
            <td>
                <input type="text" name="txtName" />
            </td>
        </tr>
        <tr>
            <td>Email : </td>
            <td>
                <input type="email" name="txtEmail" />
            </td>
        </tr>
        <tr>
            <td>DOB : </td>
            <td>
                <input type="datetime-local" name="txtDOB" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">
                    Submit
                </button>
                <button type="reset">
                    Clear
                </button>
            </td>
        </tr>

    </table>
</form>

<hr />

<table>
    <thead>
        <tr>
            <th>Delete</th>
            <th>Edit</th>
            <th>Name</th>
            <th>Email</th>
            <th>DOB</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var s in Model)
            {
                <tr>
                    <td>
                        <a href="/Home/Contact/@s.Id">
                            Delete
                        </a>
                    </td>
                    <td>
                        <a href="/Home/About/@s.Id">
                            Edit
                        </a>
                    </td>
                    <td>@s.Name</td>
                    <td>@s.Email</td>
                    <td>@s.DOB</td>
                    <td>@(s.isActive==1?"Active":"InActive")</td>
                </tr>
            }
        }
    </tbody>
</table>